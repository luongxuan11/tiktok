{
   "arrowParens": "always",
   "bracketSameLine": false,
   "bracketSpacing": true,
   "embeddedLanguageFormatting": "auto",
   "htmlWhitespaceSensitivity": "css",
   "insertPragma": false,
   "jsxSingleQuote": false,
   "printWidth": 180,
   "proseWrap": "preserve",
   "quoteProps": "as-needed",
   "requirePragma": false,
   "semi": true,
   "singleQuote": false,
   "tabWidth": 3,
   "trailingComma": "all",
   "useTabs": false,
   "vueIndentScriptAndStyle": false,
   "overrides": [
      {
         "files": ["*.css", "*.scss"],
         "options": {
            "singleQuote": false,
            "semi": true,
            "tabWidth": 3
         }
      }
   ]
}
